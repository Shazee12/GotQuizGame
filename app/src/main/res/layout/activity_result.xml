<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/got"
    android:orientation="vertical"

>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ttt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Your watch has ended"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/point_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_below="@+id/ttt"
            android:text="You Scored"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/point_scored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/point_text_view"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="0_"
            android:textColor="#fff"
            android:textSize="80sp" />

        <TextView
            android:id="@+id/points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/point_scored"
            android:textSize="34sp"
            android:layout_marginTop="16dp"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:gravity="center"
            android:text="Points"

            />




    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"

        >

        <Button
            android:id="@+id/play_again_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="16dp"
            android:background="@drawable/btn"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Play Again"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            />



        <Button
            android:id="@+id/main_menus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@id/play_again_button"
            android:padding="16dp"
            android:textColor="#fff"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Main Menu"
            android:background="@drawable/btn"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>



</LinearLayout>