<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download"
  >


    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose a Category:"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:id="@+id/btns1"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_marginStart="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_marginTop="15dp"
        android:text="Season 1"
        android:background="@drawable/btn"
        android:textColor="#fff"

        />
    <Button
        android:id="@+id/btns2"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_marginStart="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btns1"
        android:text="Season 2"
        android:background="@drawable/btn"
        android:layout_marginTop="15dp"

        android:textColor="#fff"

        />
    <Button
        android:id="@+id/btns3"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"

        android:layout_height="wrap_content"
        android:layout_below="@id/btns2"
        android:text="Season 3"
        android:background="@drawable/btn"
        android:textColor="#fff"

        />
    <Button
        android:id="@+id/btns4"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_marginTop="15dp"

        android:layout_marginStart="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btns3"
        android:text="Season 4"
        android:background="@drawable/btn"
        android:textColor="#fff"

        />
    <Button
        android:id="@+id/btns5"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_marginStart="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        android:layout_below="@id/btns4"
        android:text="Season 5"
        android:background="@drawable/btn"
        android:textColor="#fff"

        />
    <Button
        android:id="@+id/btns6"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_marginStart="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        android:layout_below="@id/btns5"
        android:text="Season 6"
        android:background="@drawable/btn"
        android:textColor="#fff"

        />
    <Button
        android:id="@+id/btns7"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_marginStart="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btns6"
        android:text="Season 7"
        android:layout_marginTop="15dp"

        android:background="@drawable/btn"
        android:textColor="#fff"

        />



</RelativeLayout>
